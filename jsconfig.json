{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "baseUrl": "src",
    "paths": {
      "@context/*": ["context/*"],
      "@hooks/*": ["hooks/*"],
      "@components/*": ["components/*"],
      "@lib/*": ["lib/*"],
      "@pages/*": ["pages/*"],
      "@posts/*": ["posts/*"],
      "@public/*": ["public/*"],
      "@styles/*": ["styles/*"]
    }
  },
  "exclude": ["node_modules", "**/node_modules", "dist"]
}
